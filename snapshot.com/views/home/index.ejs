<%- include("../partial/header.ejs"); %>
    <link rel="preconnect" href="https://fonts.gstatic.com">
    <link href="https://fonts.googleapis.com/css2?family=Dancing+Script:wght@500&display=swap" rel="stylesheet"> 
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">
    <link rel="stylesheet" href="/css/styles.css">
    <h1>welcome to index page</h1>
    <p>Welcome to our video streaming server</p>
    <form action="/search/process" method="post">
        <div id="search" class="fa fas-search">
            <input type="text" class="form-control web-search-box" placeholder="search type title of video and press Enter " name="keyword" value='' id="se">
            <input type="submit" value="send" style="height: 35px; padding-top: 25px; padding-bottom: 10px; ">
        </div>
    </form>
    <% posts.forEach(function(post){ %>
        <div class="col-sm-4 col-md-4">
            <div class="thumbnail">
                <img src="<%= post.thumbnail %>" alt="logo" style="height:200px;width:100%;display:block">
                <div class="caption">   
                    <h3 id="post"><%= post.title %></h3>
                    <p><%= post.content %></p>
                    <input type="hidden" value="<%= post.userID %>"> 
                    <input type="hidden" name="filename" id="hidden" value="<%= post.videos %>">
                    <a href="/videos/watches/<%= post.title %>" class="btn btn-success">Watch/download files</a>
                </div>
            </div>
        </div>
        <script>
            var file = "<%= post.videos %>";
            console.log(file);
            var ext=file.slice((file.lastIndexOf(".") - 1 >>> 0) + 2);
            var mp4;
            console.log(ext);
            if(ext=='mp4'){
                console.log("video file");
            }
            else{
                console.log("just a ordinary file here");
            }
        </script>      
    <% }) %>
